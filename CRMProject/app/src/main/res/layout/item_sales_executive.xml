<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_total_follow_up"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:paddingLeft="16dp">

            <ImageView
                android:id="@+id/iv_total_follow_up"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/follow_record" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/iv_total_follow_up">

                <TextView
                    android:id="@+id/tv_total_follow_up_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/total_follow_up"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_total_follow_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_total_follow_up_label"
                    android:layout_below="@+id/tv_total_follow_up_label"
                    android:layout_marginTop="6dp"
                    android:text="84"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_new_clue"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:paddingLeft="16dp">

            <ImageView
                android:id="@+id/iv_new_clue"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/clue" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/iv_new_clue">

                <TextView
                    android:id="@+id/tv_new_clue_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_clue" />

                <TextView
                    android:id="@+id/tv_new_customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_new_clue_label"
                    android:layout_below="@+id/tv_new_clue_label"
                    android:layout_marginTop="4dp"
                    android:text="84"
                    android:textColor="@android:color/black" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_new_business_opportunity"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:paddingLeft="16dp">

            <ImageView
                android:id="@+id/iv_new_business_opportunity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/business_opportunity" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/iv_new_business_opportunity">

                <TextView
                    android:id="@+id/tv_new_business_opportunity_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_business_opportunity" />

                <TextView
                    android:id="@+id/tv_new_business_opportunity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_new_business_opportunity_label"
                    android:layout_below="@+id/tv_new_business_opportunity_label"
                    android:layout_marginTop="4dp"
                    android:text="84"
                    android:textColor="@android:color/black" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>