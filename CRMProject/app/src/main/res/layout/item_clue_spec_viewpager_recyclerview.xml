<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_date"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_grey_stroke_top_bottom">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="2016-08-10 周三"
            android:textColor="@color/subtitle_grey"
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <!--<LinearLayout-->
        <!--android:id="@+id/ll_left_container"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:orientation="vertical">-->

        <!--<TextView-->
        <!--android:id="@+id/tv_time"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="20dp"-->
        <!--android:layout_marginTop="4dp"-->
        <!--android:text="14:32"-->
        <!--android:textColor="@color/bottom_bar_text_normal_color"-->
        <!--android:textSize="16sp" />-->

        <!--<ImageView-->
        <!--android:id="@+id/iv_remind_state"-->
        <!--android:layout_width="40dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:layout_marginLeft="20dp"-->
        <!--android:src="@drawable/fx_conversation_normal" />-->


        <!--</LinearLayout>-->
        <View
            android:id="@+id/v_up_line"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginLeft="9dp"
            android:background="@color/line_color" />

        <ImageView
            android:id="@+id/iv_complete_state"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@+id/v_up_line"
            android:src="@drawable/clue_spec_point" />


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/iv_complete_state"
            android:text="14:30"
            android:textColor="@color/colorPrimary"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/filter_tab_text_color"
            android:text="ding"
            android:layout_alignBaseline="@+id/tv_time"
            android:layout_alignParentRight="true"/>

        <LinearLayout
            android:id="@+id/ll_follow_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_complete_state"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="跟进标题"
                android:textColor="@color/title_black"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/ll_related_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_related_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/related_business_opportunity"
                    android:textColor="@color/filter_tab_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" :"
                    android:textColor="@color/filter_tab_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_related_one_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商机名称商机名称"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/ll_related_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_related_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/related_contact"
                        android:textColor="@color/filter_tab_text_color"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" :"
                        android:textColor="@color/filter_tab_text_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_related_two_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:maxLength="5"
                        android:text="123"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="@color/filter_tab_text_color"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/follow_method"
                    android:textColor="@color/filter_tab_text_color"
                    android:textSize="16sp"
                    android:singleLine="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" :"
                    android:textColor="@color/filter_tab_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_follow_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:singleLine="true"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="跟进内容跟进内容跟进内容跟进内容跟进内容跟进内容跟进内容跟进内容跟进内容跟进内容跟进内容跟进内容跟进内容跟进内容跟进内容"
                android:textColor="@color/subtitle_grey"
                android:textSize="16sp" />

            <GridLayout
                android:id="@+id/gl_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:columnCount="4"
                android:orientation="horizontal"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_follow_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/tv_follow_state_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/follow_state_with_colon"
                    android:textColor="@color/filter_tab_text_color"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/ll_last_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_follow_state_before"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="继续跟进"
                        android:textColor="@color/filter_tab_text_color"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bigger_than"
                        android:textColor="@color/filter_tab_text_color"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_follow_state_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="继续跟进"
                    android:textColor="@color/filter_tab_text_color"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:id="@+id/v_bottom_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_alarm"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:src="@drawable/clue_spec_alerm"
            android:visibility="gone" />

        <View
            android:id="@+id/v_down_line"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ll_follow_content"
            android:layout_below="@+id/iv_complete_state"
            android:layout_marginLeft="9dp"
            android:background="@color/line_color" />
    </RelativeLayout>
</LinearLayout>