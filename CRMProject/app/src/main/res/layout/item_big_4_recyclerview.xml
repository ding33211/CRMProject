<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item_white_grey_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_phone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/orange_phone"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_approval_yes"
            android:layout_width="40dp"
            android:layout_height="16dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/pass"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_approval_no_or_wait"
            android:layout_width="50dp"
            android:layout_height="16dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/wait_approval"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="title"
            android:textColor="@color/title_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="0"
            android:text="初步沟通"
            android:textColor="@color/subtitle_grey"
            android:textSize="14sp" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_rush_in"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_orange_btn"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/plus_symbol"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/rush_in"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ll_title"
        android:layout_below="@+id/ll_title"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/tv_rmb_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rmb_label"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="联系人公司名称"
            android:textColor="@color/subtitle_grey"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_sub_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <View
                android:id="@+id/v_sub_line"
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/subtitle_grey" />

            <TextView
                android:id="@+id/tv_sub_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="联系人公司名称"
                android:textColor="@color/subtitle_grey"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_customer_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/ll_subtitle"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_white_stroke_top_and_bottom"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_count"
                android:textColor="@color/title_black" />

            <TextView
                android:id="@+id/tv_order_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="535"
                android:textColor="@color/progressbar_green"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/item_line_grey" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_turnover"
                android:textColor="@color/title_black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rmb_label"
                    android:textColor="@color/orange_1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_order_turnover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5356.45"
                    android:textColor="@color/orange_1"
                    android:textSize="16sp" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/item_line_grey" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/useful_follow"
                android:textColor="@color/title_black" />

            <TextView
                android:id="@+id/tv_useful_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="535"
                android:textColor="@color/blue_useful_follow"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

