<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/selector_item_white_grey_bg">
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/title_black"
        android:layout_centerVertical="true"
        android:text="吴超"/>
    <TextView
        android:id="@+id/tv_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_centerVertical="true"
        android:textColor="@color/subtitle_grey"
        android:layout_toRightOf="@+id/tv_name"
        android:layout_marginLeft="20dp"
        android:text="职务"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">
        <ImageView
            android:id="@+id/iv_mobile_contact"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/phone_contact"/>
        <ImageView
            android:id="@+id/iv_message_contact"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/message_contact"/>
    </LinearLayout>
    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/item_line_grey"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>