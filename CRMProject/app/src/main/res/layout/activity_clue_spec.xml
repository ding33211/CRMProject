<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_clue_spec"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="10dp"
            android:text="company"
            android:textColor="#88ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_follow_state_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_company_name"
            android:layout_marginTop="10dp"
            android:text="跟进阶段: "
            android:textColor="#88ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_follow_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_follow_state_label"
            android:layout_toRightOf="@+id/tv_follow_state_label"
            android:text="初步沟通"
            android:textColor="#88ffffff"
            android:textSize="14sp" />

        <View
            android:id="@+id/v_line"
            android:layout_width="1dp"
            android:layout_height="14dp"
            android:layout_alignBottom="@+id/tv_follow_state"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_follow_state"
            android:background="#88ffffff" />

        <TextView
            android:id="@+id/tv_follow_result_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_follow_state"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/tv_follow_state"
            android:text="跟进结果: "
            android:textColor="#88ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_follow_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_follow_result_label"
            android:layout_toRightOf="@+id/tv_follow_result_label"
            android:text="继续跟进"
            android:textColor="#88ffffff"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_follow_state_label"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="20dp">


            <ImageView
                android:id="@+id/iv_sns1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/fx_conversation_normal" />

            <ImageView
                android:id="@+id/iv_sns3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:src="@drawable/fx_conversation_normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_sns3"
                android:layout_toRightOf="@+id/iv_sns1">

                <ImageView
                    android:id="@+id/iv_sns2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/fx_conversation_normal" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_sns5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/fx_conversation_normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_sns3"
                android:layout_toLeftOf="@+id/iv_sns5">

                <ImageView
                    android:id="@+id/iv_sns4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/fx_conversation_normal" />
            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="所有跟进"
            android:textColor="#333333"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"/>

        <com.soubu.CRMProject.widget.IndicatorViewPager.FixedIndicatorView
            android:id="@+id/fiv_indicator"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_alignParentBottom="true"
            android:layout_width="80dp"
            android:layout_height="36dp" />
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>


</LinearLayout>